{
    "dataset": {
        "repo_id": "lerobot/pusht"
    },
    "env": {
        "type": "pusht",
        "task": "PushT-v0",
        "obs_type": "pixels_agent_pos",
        "render_mode": "rgb_array"
    },
    "policy": {
        "type": "smolandfast",
        "vlm_checkpoint": "HuggingFaceTB/SmolVLM2-500M-Video-Instruct",
        "n_obs_steps": 1,
        "device": "cuda",
        "use_amp": false,
        "push_to_hub": false,
        "chunk_size": 10,
        "n_action_steps": 5,
        "n_state_bins": 512,
        "vision_model_optimizer_lr": 0.0001,
        "connector_optimizer_lr": 0.0001,
        "text_model_optimizer_lr": 0.0001,
        "optimizer_lr": 0.0001,
        "optimizer_betas": [
            0.9,
            0.95
        ],
        "optimizer_eps": 1e-08,
        "optimizer_weight_decay": 0.01,
        "scheduler_warmup_steps": 1000,
        "scheduler_decay_steps": 30000,
        "scheduler_decay_lr": 2.5e-06,
        "precision": "float32",
        "freeze_vision_encoder": true,
        "freeze_connector": false,
        "do_image_splitting": false,
        "drop_n_last_frames": 1,
        "grad_clip_norm": 1,
        "crop_shape": [84, 84]
    },
    "num_workers": 4,
    "batch_size": 16,
    "steps": 30000,
    "eval_freq": 1000,
    "log_freq": 50,
    "save_checkpoint": true,
    "save_freq": 10000,
    "profile_step_num": -1,
    "eval": {
        "n_episodes": 64,
        "batch_size": 64
    },
    "wandb": {
        "enable": true,
        "project": "lerobot"
    }
}

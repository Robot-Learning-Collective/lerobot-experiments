{
    "dataset": {
        "repo_id": "HuggingFaceVLA/libero"
    },
    "env": {
        "type": "libero",
        "task": "libero_object"
    },
    "policy": {
        "type": "vla0",
        "vlm_checkpoint": "HuggingFaceTB/SmolVLM2-500M-Video-Instruct",
        "n_obs_steps": 1,
        "device": "cuda",
        "use_amp": false,
        "push_to_hub": false,
        "chunk_size": 8,
        "n_action_steps": 8,
        "optimizer_lr": 5e-5,
        "optimizer_betas": [
            0.9,
            0.95
        ],
        "optimizer_eps": 1e-08,
        "optimizer_weight_decay": 0.01,
        "scheduler_warmup_steps": 1000,
        "scheduler_decay_steps": 50000,
        "scheduler_decay_lr": 5e-06,
        "precision": "float32",
        "freeze_vision_encoder": false,
        "do_image_splitting": false,
        "drop_n_last_frames": 1,
        "grad_clip_norm": 1,
        "crop_shape": [
            230,
            230
        ],
        "relative_actions": false,
        "use_state": true
    },
    "num_workers": 8,
    "batch_size": 16,
    "steps": 50000,
    "eval_freq": 5000,
    "log_freq": 100,
    "save_checkpoint": true,
    "save_freq": 10000,
    "profile_step_num": -1,
    "eval": {
        "n_episodes": 8,
        "batch_size": 8
    },
    "wandb": {
        "enable": true,
        "project": "lerobot"
    }
}